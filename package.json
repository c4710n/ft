{
  "name": "ft",
  "description": "A simple framework in EC pattern for HTML5 marketing pages.",
  "version": "0.11.0",
  "repository": "c4710n/ft",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "lint": "eslint 'src/**/*.js'",
    "code-quality": "npm run lint",
    "cleanup": "rm -rf dist",
    "transpile": "babel src -d dist --source-maps",
    "copy-files": "cp -r package.json README.md dist",
    "build": "npm run cleanup && npm run transpile && npm run copy-files",
    "build:watch": "nodemon --watch src --exec 'npm run build'",
    "release": "npm run code-quality && npm run build && cd dist && npm publish"
  },
  "sideEffects": false,
  "main": "dist/index.js",
  "files": [
    "dist/*"
  ],
  "dependencies": {
    "@pixi/sound": "^4.0.3",
    "@tweenjs/tween.js": "^18.6.4",
    "eventemitter3": "^4.0.7",
    "fast-glob": "^3.2.7",
    "js-cookie": "^3.0.1",
    "parameter": "^3.6.0",
    "pixi.js-legacy": "^5.0.0",
    "qs": "^6.10.2",
    "string-length": "^5.0.1",
    "vconsole": "^3.10.1",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.5",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/plugin-proposal-class-properties": "^7.16.5",
    "@babel/plugin-proposal-optional-chaining": "^7.16.5",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.16.5",
    "core-js": "3",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.3",
    "prettier": "^2.5.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "**/*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
